    </mj-section>
    
    <mj-section border="1px solid #eee"
                background-color="#f9f9f9"
                padding-bottom="0">
      <mj-column>
        <mj-text font-weight="bold"
                 color="#333"
                 font-size="16px">
        	Detalhes do pedido
        </mj-text>
      	<mj-table>
          <tr>
            <th style="text-align: left;">
              Produto
            </th>
            <th style="text-align: center;">
              Qtd.
            </th>
          </tr>
          <tr>
            <td>{{this.name}}</td>
            <td class="qt">{{this.quantity}}</td>
          </tr>
        </mj-table>
      </mj-column>
    </mj-section>
    <mj-section padding-top="32px">
    	<mj-column>
      	<mj-social mode="horizontal" icon-size="20px">
          <mj-social-element background-color="#e1306c" 
                             name="instagram"
                             href="https://instagram.com/memoriaanalogica">
          	memoriaanalogica
          </mj-social-element>
        </mj-social> 
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>