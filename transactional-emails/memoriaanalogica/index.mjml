<mjml>

  <mj-head>
    <mj-attributes>
      <mj-text color="#444" 
               font-size="18px"
               line-height="1.5"/>
      <mj-section background-color="#fff" />
      <mj-all font-family='Helvetica, sans-serif' />
    </mj-attributes>
    <mj-style>
    	th {
      	padding: 4px 0;
      }
      td {
      	padding: 4px 0;
      }
      td.qt {
      	text-align: center;
      	width: 40px;
      }
    </mj-style> 
  </mj-head>

  <mj-body background-color="#fff">
    <mj-section>
      <mj-column>
      	<mj-text align="center" color="#000" font-size="20px">
        	<strong>mem칩ria</strong>anal칩gica
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section>
      <mj-column>
        <mj-text color="#111"
                 font-weight="bold"
                 font-size="24px">
          Pedido Confirmado! :)
        </mj-text>
        <mj-spacer height="16px" />
        <mj-text>
        	Ol치 {{name}},
        </mj-text>
        <mj-text>
